<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="574dp"
        android:layout_height="84dp"
        android:layout_marginStart="361dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="361dp"
        android:layout_marginBottom="877dp"
        android:fontFamily="sans-serif-black"
        android:text="PiedraPapelTijeras"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/IVImagen"
        android:layout_width="286dp"
        android:layout_height="254dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="571dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.436"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="305dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="497dp"
        android:text="Tu apuesta: "
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVImagen"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/BTijeras"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="334dp"
        android:text="Tijeras"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BPapel"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/BPapel"
        android:layout_width="130dp"
        android:layout_height="97dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="334dp"
        android:text="Papel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BTijeras"
        app:layout_constraintStart_toEndOf="@+id/BPiedra"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BPiedra"
        android:layout_width="118dp"
        android:layout_height="81dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="334dp"
        android:text="Piedra"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BPapel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/TResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="301dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="214dp"
        android:text="Tu resultado"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BRestart"
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:layout_marginStart="396dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="402dp"
        android:layout_marginBottom="68dp"
        android:text="Restart"
        android:textColorHighlight="#9C27B0"
        android:textColorHint="#E91E63"
        android:textColorLink="#E91E63"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TResultado"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>